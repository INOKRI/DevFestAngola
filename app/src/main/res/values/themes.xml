<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevFestAngola" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dev_fest_lt_blue</item>
        <item name="colorPrimaryVariant">@color/dev_fest_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorRed</item>
        <item name="colorSecondaryVariant">@color/colorRed</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="font">@font/ubuntu_bold</item>
    </style>

    <style name="Theme.DevFestAngola.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="Theme.DevFestAngola.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DevFestAngola.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"
        />
</resources>